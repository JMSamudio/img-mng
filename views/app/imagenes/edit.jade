extends ../../layout.jade
block contenido
    div(class="col-md-6 remove-float d-block mx-auto big-top-space")
        h1 Subir nueva imagen
        form(action="/app/imagenes/#{imagen.id}?_method=PUT", method="post")
            div(class="form-group")
                label(for="title") Titulo
                input(type="text" id="title" name="title" placeholder="Titulo de la imagen" class="form-control" value="#{imagen.title}")
            div(class="row top-space")
                div(class="col-xs-12 col-sm-6")
                    input(type="submit" value="Guardar" class="btn btn-info")